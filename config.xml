<?xml version='1.0' encoding='utf-8'?>
<widget id="com.pouchdb.pouchdbapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PouchDB WKWebKit Issue</name>
    <description>
        Reproducing iOS WKWebKit + SqLite 2 plugin issue with PouchDB not detecting websql adapter support, even though it's there
    </description>
    <author email="info@pouchdb.com.au" href="https://www.pouchdb.com.au">
        Apache Cordova Team
    </author>
    <content src="http://localhost:0" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="Orientation" value="all" />
    </platform>
    <preference name="AlternateContentSrc" value="http://localhost:0" />
    <engine name="ios" spec="~4.1.1" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-labs-wkwebview-engine-localhost" spec="https://github.com/apache/cordova-plugins.git#master:wkwebview-engine-localhost" />
    <plugin name="cordova-plugin-sqlite-2" spec="~1.0.4" />
</widget>
